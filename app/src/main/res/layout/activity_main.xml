<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.jmajyo.cards.activities.MainActivity"
    android:background="@drawable/card_back_blue">

    <ImageView
        android:id="@+id/activity_main___cards_image_final"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_back_blue"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/activity_main___cards_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_back_blue"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/acttivity_main___cards_left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        tools:text="48 cards left!"
        android:gravity="center"
        android:textColor="#FFC000"
        android:background="#a6050505"/>
    <Button
        android:id="@+id/activity_main___newDeck_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="New Deck"
        android:textSize="40sp"
        android:textColor="#FFC000"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"/>
    <Button
        android:id="@+id/activity_main___1_button_invisible"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="#01050505"/>
    <Button
        android:id="@+id/activity_main___2_button_invisible"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:background="#00050505"/>
    <EditText
        android:id="@+id/activity_main___text_ip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="33sp"
        android:textStyle="bold|italic"
        android:textColor="#c4c119"
        android:textColorHint="#c4c119"
        android:hint="format x.x.x.x:x"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:background="#b9151414"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/activity_main___button_ip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Save IP"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_below="@id/activity_main___text_ip"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />
</RelativeLayout>
